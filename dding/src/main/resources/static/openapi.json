{
  "openapi": "3.0.1",
  "info": {
    "title": "DDING API",
    "description": "API 명세서 - 스프린트 1",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://weable.me/api/v1"
    }
  ],
  "tags": [
    {
      "name": "communityBoard",
      "description": "사용자들이 작성하는 게시판입니다."
    },
    {
      "name": "weather",
      "description": "학교 날씨 제공 API 입니다."
    }
