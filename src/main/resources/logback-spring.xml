<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <!-- 1. ANSI 색상 변환 규칙 (Spring Boot 3.2 이상) -->
    <conversionRule conversionWord="clr"
                    converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex"
                    converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>

    <!-- 2. 공통 로그 패턴: ANSI 색상 직접 지정 -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %clr([%thread]){faint} %clr(%-5level){ERROR=red bold, WARN=yellow bold, INFO=green, DEBUG=blue, TRACE=magenta} %clr(%X{TRACE_ID:-}-){yellow} %clr(%logger{36}){cyan} - %msg%n%wex"/>

    <!--추가-->
    <property name="LOG_DIR" value="/home/ubuntu/MJS_BACKEND/logs"/>
    <property name="LOG_FILE" value="${LOG_DIR}/mjs-backend.log"/>

    <!-- 파일은 ANSI 색상 넣지 말고 깔끔하게 -->
    <property name="FILE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %X{TRACE_ID:-}- %logger{36} - %msg%n"/>

    <!-- 3. 콘솔 Appender (동기) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
            <!-- Windows 터미널 색상 활성화: jansi 사용 시 -->
            <!-- <withJansi>true</withJansi> -->
        </encoder>
    </appender>

    <!-- 4. 비동기 Appender -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
        <queueSize>5000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- 파일 Appender (추가) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <append>true</append>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 날짜별 롤링 -->
            <fileNamePattern>${LOG_DIR}/mjs-backend.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${FILE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 5. 루트 로거 (INFO 이상만 동기 출력) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- 6. 상세 로거 (비동기 DEBUG 로깅 등) -->
    <logger name="nova.mjs.config.aop.ExecutionTimeLoggerAspect"
            level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>

    <logger name="nova.mjs.config.logging.MdcFilter"
            level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>

    <!-- 7. Hibernate SQL 로그 수준 조정 (운영은 WARN 이상 추천) -->
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>

</configuration>
